import math

#определяем функцию
def f(x):
    return (x-3)*(x-72)*(x+8)+6

def main():
    #определяем точность 0.001
    eps = 0.001
    #указываем пределы поиска решений
    x1=-100
    x2=100
    #находим переменную поиска корня
    x=(x1+x2)/2
    while (abs(f(x))>eps):
        #выбираем отрезок слева
        if ((f(x1)>0) and (f(x)<0)) or ((f(x1)<0) and (f(x)>0)):
            x2=x
        #выбираем отрезок справа
        elif ((f(x)>0) and (f(x2)<0)) or ((f(x)<0) and (f(x2)>0)):
            x1=x
        #производим последовательное деление целого на две части
        x=(x1+x2)/2
    return x
print (main())
